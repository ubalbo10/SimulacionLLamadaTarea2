<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9c8b8f"
                android:id="@+id/contenedorGeneral"
                tools:context=".MainActivity">
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:text="llamando"
    android:visibility="gone"
              android:id="@+id/txtllamando"
    />
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:text=""
              android:visibility="gone"
              android:id="@+id/txtllamadaNumero"
    />

<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorLlamada"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">


    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/txtMensaje"
            android:background="@drawable/boton_circulo"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMensaje" android:background="@drawable/boton_circulo"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toEndOf="@+id/btn2"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMensaje" android:background="@drawable/boton_circulo"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn4"
            android:background="@drawable/boton_circulo"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn8"
            app:layout_constraintStart_toEndOf="@+id/btn7" android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn5" android:background="@drawable/boton_circulo"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn9"
            app:layout_constraintStart_toEndOf="@+id/btn8" android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn6" android:background="@drawable/boton_circulo"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnc" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn7"
            android:background="@drawable/boton_circulo"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn0"
            app:layout_constraintStart_toEndOf="@+id/btnc" android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.031"
            android:background="@drawable/boton_circulo"/>
    <Button
            android:text="llamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bc3234"
            android:id="@+id/btnllamada"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="145dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn0"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40sp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.089" android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/txtMensaje"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:background="@drawable/boton_circulo"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn5" app:layout_constraintStart_toEndOf="@+id/btn4"
            android:layout_marginStart="20dp" tools:ignore="MissingConstraints" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2" android:background="@drawable/boton_circulo"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn6" app:layout_constraintStart_toEndOf="@+id/btn5"
            android:layout_marginStart="20dp" tools:ignore="MissingConstraints" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3" android:background="@drawable/boton_circulo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>